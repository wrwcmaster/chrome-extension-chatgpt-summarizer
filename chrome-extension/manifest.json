{
  "manifest_version": 3,
  "name": "ChatGPT Summarizer",
  "version": "1.0",
  "description": "Send selected text to ChatGPT and ask it to summarize in your desired language",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "webNavigation",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://chat.openai.com/"
  ],
  "icons": {
    "128": "icon.png"
  }
}
